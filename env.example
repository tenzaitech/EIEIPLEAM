# ========================================
# TENZAI Express.js Backend API v1.0
# Environment Variables Configuration
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development
API_VERSION=v1
API_PREFIX=/api/v1
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL Database
DATABASE_URL="postgresql://username:password@localhost:5432/tenzai_purchasing"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tenzai_purchasing
DB_USER=username
DB_PASSWORD=password

# ========================================
# REDIS CACHE CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tenzaitech.com
SMTP_FROM_NAME=TENZAI System

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key
COOKIE_SECRET=your-cookie-secret-key

# ========================================
# EXTERNAL SERVICES
# ========================================
# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Supabase (if using)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ========================================
# MONITORING & ANALYTICS
# ========================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# ========================================
# PAYMENT PROCESSING
# ========================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key

# ========================================
# DEVELOPMENT & TESTING
# ========================================
# Test Database
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/tenzai_purchasing_test"

# Test Email
TEST_EMAIL=test@tenzaitech.com

# ========================================
# PRODUCTION SPECIFIC
# ========================================
# SSL Configuration
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# CDN Configuration
CDN_URL=https://cdn.tenzaitech.com
CDN_BUCKET=tenzai-assets

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# ========================================
# DEPLOYMENT
# ========================================
DEPLOYMENT_ENVIRONMENT=development
BUILD_NUMBER=1.0.0
COMMIT_HASH=latest

# ========================================
# ðŸ¤– MCP (Model Context Protocol) CONFIGURATION
# ========================================

# MCP Server Configuration
MCP_ENABLED=true
MCP_PORT=3001
MCP_HOST=localhost
MCP_PROTOCOL=http
MCP_TIMEOUT=30000

# AI Provider Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-4
AI_API_KEY=your-openai-api-key-here
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Context Management
MAX_CONTEXT_SIZE=10000
CONTEXT_WINDOW=8000
ENABLE_MEMORY=true
MEMORY_RETENTION=24

# Resource Management
ENABLE_FILE_ACCESS=true
ENABLE_DATABASE_ACCESS=true
ENABLE_API_ACCESS=true
ALLOWED_FILE_TYPES=.txt,.md,.json,.csv,.xlsx,.pdf
MAX_FILE_SIZE=10485760

# Tool Integration
ENABLE_TOOLS=true
AVAILABLE_TOOLS=search,calculate,analyze,generate,validate
TOOL_TIMEOUT=30000

# MCP Security Configuration
MCP_ENABLE_AUTH=true
MCP_API_KEY_REQUIRED=true
MCP_API_KEY=your-mcp-api-key-here
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_WINDOW=900000
MCP_RATE_LIMIT_MAX=100
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://claude.ai,https://claude-desktop.app

# MCP Logging and Monitoring
ENABLE_AI_LOGGING=true
LOG_PROMPTS=true
LOG_RESPONSES=true
LOG_PERFORMANCE=true

# ========================================
# TESTING CONFIGURATION
# ========================================
JEST_TIMEOUT=10000

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
DEBUG=app:*
NODEMON_IGNORE=logs/*,uploads/*,node_modules/*

# ========================================
# PRODUCTION CONFIGURATION
# ========================================
# Uncomment and configure for production
# NODE_ENV=production
# PORT=8080
# HOST=0.0.0.0
# DATABASE_URL=your-production-database-url
# REDIS_URL=your-production-redis-url
# JWT_SECRET=your-production-jwt-secret
# MCP_API_KEY=your-production-mcp-api-key
# AI_API_KEY=your-production-ai-api-key 